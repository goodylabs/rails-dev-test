<h2><%= t(".login") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", label: false, placeholder: t('.email') %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", label: false, placeholder: t('.password') %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t(".login_button"), class: 'login' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
