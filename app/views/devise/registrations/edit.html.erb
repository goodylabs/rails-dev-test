<h2><%= t(".edit") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", label: false, placeholder: t('.email') %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.text_field :address, autocomplete: "address", label: false, placeholder: t('.address') %>
  </div>

  <div class="field">
    <%= f.text_field :credit_card, autocomplete: "credit-card", label: false, placeholder: t('.credit_card') %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", label: false, placeholder: t('.password') %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", label: false, placeholder: t('.password_confirmation') %>
  </div>

  <div class="field">
    <%= f.password_field :current_password, autocomplete: "current-password", label: false, placeholder: t('.current_password') %>
  </div>

  <div class="actions">
    <%= f.submit t(".update"), class: 'update' %>
  </div>
<% end %>

<h3><%= t(".cancel_account") %></h3>

<p><%= button_to t('.cancel'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %></p>

<%= link_to "Back", :back %>
