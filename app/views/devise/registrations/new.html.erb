<h2><%= t('.signup') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", label: false, placeholder: t('.email') %>
  </div>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", label: false, placeholder: t('.first_name') %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last name", label: false, placeholder: t('.last_name') %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", label: false, placeholder: t('.password') %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", label: false, placeholder: t('.password_confirmation') %>
  </div>

  <div class="actions">
    <%= f.submit t(".signup_button"), class: 'sign up' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
