<div align="center">
<h3> Add new product </h3>
  <%= form_with model: @product, url: product_new_path , method: :post, local: true do |form| %>
    <% if @product.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
        <h2> <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved: </h2>
    <ul>
        <% @product.errors.full_messages.each do |error| %>
           <li><%= error %></li>
        <% end %>
    </ul>
    </div>
    <% end %>

   <div class="field">
      <%= form.label :name %>
<br />
      <%= form.text_field :name, placeholder: "name", name: "name" %>
    </div>

    <div class="field">
    <%= form.label :price %>
<br />
      <%= form.number_field  :price, name: "price",  step: 0.01 %>
    </div>
    <br/>
    <div class="actions">
    <%= form.submit %>
    </div>
<% end %>
</div>
</div>
</div>