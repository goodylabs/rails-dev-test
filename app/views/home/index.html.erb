        <%= f.submit "Add to cart" %>
        <% end %>
        </td>
        <%
=begin%>
 <td><%= link_to  "Edit", edit_admin_product_path(product.id) %></td>
        <% if  @cart.include?(product) %>
          <td> <%= link_to image_tag('shopping_cart.png', alt: "Insert new", width: 24), show_cart_path, method: :delete %> </td>
        <% else %>
          <td> <%= link_to  "Add to cart", add_to_cart_path(product.id) %></td>
        <% end %> 
