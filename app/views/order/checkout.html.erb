<section class="checkout">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <h3>Checkout</h3>
      </div>
    </div>
    <% if @products.any? %>
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="order-details animated slideInLeft">
                <h5>Order details</h5>
                <table class="table">
                    <thead>
                        <tr>
                          <th></th>
                          <th>Name</th>
                          <th>Qty</th>
                          <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @products.each do |p| %>
                            <tr>
                              <td>
                                <%= image_tag p['image'], :class => 'img-responsive', :alt => 'product' %>
                              </td>
                              <td><%= p['name'] %></td>
                              <td>
                                <%= p['quantity'] %>
                              </td>
                              <td><%= number_to_currency(p['price'], precision: 2) %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
              <div class="summary">
                <p>Total: <span><%= number_to_currency(@total_price, precision: 2) %></span></p>
              </div>
            </div>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="payment-informations">
              <h5>Payment informations</h5>
              <form action="">
                <div class="input-group">
                  <input type="email" placeholder="E-mail"/>
                </div>
                <div class="input-group">
                  <input type="text" placeholder="Address"/>
                </div>
                <div class="input-group">
                  <select name="">
                    <option value="0">Visa</option>
                    <option value="1">MasterCard</option>
                    <option value="2">Discover</option>
                    <option value="3">American Express</option>
                  </select>
                </div>
                <div class="input-group">
                  <input type="number" placeholder="Card number"/>
                </div>
                <div class="input-group">
                  <input type="text" placeholder="Expiration date"/>
                </div>
                <div class="input-group">
                  <input type="number" placeholder="CVV"/>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</section>